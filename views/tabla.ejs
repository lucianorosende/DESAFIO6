<div class="jumbotron">
    <h1>Vista de Productos</h1>
    <br>

    <% if(hayProductos) { %>
        <div class="table-responsive">
            <table class="table table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Foto</th>
                    <th>Id</th>
                </tr>
                <% for(const producto in productos) { %>
                    <tr>
                        <td>
                            <%= productos[producto].title %>
                        </td>
                        <td>$<%= productos[producto].price %>
                        </td>
                        <td><img width="50" src=<%=productos[producto].thumbnail %> alt="not found"></td>
                        <td>
                            <%= productos[producto].id %>
                        </td>
                    </tr>
                    <% }%>
            </table>
        </div>
        <% } else { %>
            <h3 class="btn btn-outline-danger">No se encontraron productos</h3>
            <% }%>
</div>